{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "AuthOption": {
    "Secret": "secret", //密钥，如果是JWT,必须>=16,客户端传过来client_secret的值 一定要跟这个相同,不然会出现 invalid_client
    "Scope": "api_longkc", //表示权限范围，如果与客户端申请的范围一致，此项可省略
    "ExpiresIn": 20, //表示过期时间，单位为秒。如果省略该参数，必须其他方式设置过期时间。
    "ClientId": "longkc", //表示客户端的ID，必选项 ResourceOwnerPassword
    "ClientCredentials": [
      {
        "ClientId": "inventory",
        "Scope": "inventoryapi",
        "Description": "申请系统"
      }, //{ClientId,AllowedScopes}
      {
        "ClientId": "order",
        "Scope": "orderapi",
        "Description": "订单系统"
      },
      {
        "ClientId": "product",
        "Scope": "productapi",
        "Description": "产品系统"
      }
    ],
    "ResourceOwnerPassword": [
      {
        "ClientId": "easc", //{ClientId,AllowedScopes}
        "Scope": "eascapi",
        "Description": "easc系统"
      },
      {
        "ClientId": "mfc",
        "Scope": "mfcapi",
        "Description": "MFC系统"
      }
    ]
  }
}
